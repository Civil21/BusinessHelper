<div class="dashboard_item my-3">
  <div class="row">
    <div class="col-1">
      <%=link_to @event.id, @event%>
    </div>
    <div class="col-1">
      <%=@event.event_status%>
    </div>
    <div class="col-1">
      <%=@event.event_type%>
    </div>
    <div class="col-3">
      <%=link_to @event.name, @event%>
    </div>
    <div class="col-3">
      <% @event.employees.each do |employee|%>
      <%=link_to employee.name,employee %>
      <%end%>
    </div>
    <div class="col-3">
      <% @event.cars.each do |car|%>
      <%=link_to car.name,car %>
      <%end%>
    </div>
  </div>
</div>
