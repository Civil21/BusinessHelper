<%= form_for @event do |f| %>
<div class="dashboard_form my-5">
  <h1 class="text-center">Створення події</h1>
  <div class="field">
    <label for="event_name">Назва події:</label>
    <%= f.text_field :name, class: "form-control", placeholder: "Приклад: Святкування створення компанії" %>
  </div>

  <div class="field">
    <label for="event_event_status">Статус події:</label>
    <%= f.select :event_status,Event.event_statuses, class: "form-control" %>
  </div>

  <div class="field">
    <label for="event_event_type">Тип події:</label>
    <%= f.select :event_type,Event.event_types, class: "form-control" %>
  </div>

  <div class="field">
    <label for="event_description">Опис події:</label>
    <%= f.text_area :description, class: "form-control", rows: 5, placeholder: "Приклад: Святкування відбудеться в місті Ужгород за адресою..." %>
  </div>

  <div class=" text-center">
    <%= f.submit "Створити подію", class:"add-project"%>
  </div>
</div>
<% end %>
