<div class="dashboard_item my-3">
  <div class="row">
    <div class="col-1">
      <%=link_to @client.id, @client%>
    </div>
    <div class="col-4">
      <%=link_to @client.name, @client%>
    </div>
    <div class="col-3">
      <%=@client.email%>
    </div>
    <div class="col-4">
      <%=link_to @client.phone, "tel:#{@client.phone}"%>
    </div>
  </div>
</div>
