<%= form_for @cargo do |f| %>
<div class="dashboard_form my-5">
  <h1 class="text-center">Створення вантажу</h1>
  <div class="field">
    <label for="cargo_name">Назва вантажу</label>
    <%= f.text_field :name, class: "form-control", placeholder: "Приклад: Трактор" %>
  </div>

  <div class="field">
    <label for="cargo_price">Ціна вантажу</label>
    <%= f.text_field :price, class: "form-control", placeholder: "Приклад: 10 000 у.о" %>
  </div>

  <div class="field">
    <label for="cargo_description">Опис вантажу</label>
    <%= f.text_area :description, class: "form-control", rows: 5, placeholder: "Приклад: Вага 2 тони, замовник, побажання" %>
  </div>

  <div class=" text-center">
    <%= f.submit "Створити вантаж", class:"add-project"%>
  </div>
</div>
<% end %>
