<h1 class="pb-0">
  <%= @client.name%>
  #<%=@client.id%>
</h1>
<div class="row align-items-center mt-4">
  <div class="col-6 d-flex justify-content-end">
    Номер телефону клі'єнта:
  </div>
  <div class="col-6 d-flex justify-content-start">
    <b><%=link_to @client.phone, "tel:#{@client.phone}"%></b>
  </div>
</div>
<div class="row align-items-center my-2">
  <div class="col-6 d-flex justify-content-end">
    Електронна скринька клі'єнта:
  </div>
  <div class="col-6 d-flex justify-content-start">
    <b><%=@client.email%></b>
  </div>
</div>
<div class="row align-items-center mb-4">
  <div class="col-6 d-flex justify-content-end">
    Опис клі'єнта:
  </div>
  <div class="col-6 d-flex justify-content-start">
    <b><%=@client.description%></b>
  </div>
</div>
<hr>
<h3>Замовлення:</h3>
<div class="dashboard_list">
  <div class="dashboard_list_head">
    <div class="row align-items-center">
      <div class="col-1">
        ID
      </div>
      <div class="col-3">
        Cтатус
      </div>
      <div class="col-2">
        Авто
      </div>
      <div class="col-3">
        Замовник
      </div>
      <div class="col-3">
        Виконавець
      </div>
    </div>
  </div>
  <div class="dashboard_list_body">
    <%=render WaybillComponent.with_collection(@waybills)%>
  </div>
</div>

<%= render "employee_comments/form", object:@client%>
<%if @employee_comments.any?%>
  <div class="row align-items-center">
    <h4 class="mt-4 mb-3">Відгуки або скарги</h4>
    <%= render EmployeeCommentComponent.with_collection(@employee_comments)%>
  </div>
<%end%>
